<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="montaditos.ControladorLogin">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>
  <children>
    <Label text="Inicio de Sesión" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <TextField fx:id="Nombre" promptText="Nombre" style="-fx-pref-width: 200px;" />
    <TextField fx:id="Correo" promptText="Correo" style="-fx-pref-width: 200px;" />
    <PasswordField fx:id="Password" promptText="Contraseña" style="-fx-pref-width: 200px;" />
    <HBox alignment="CENTER" spacing="15.0">
      <Button text="OK" onAction="#handleOk" style="-fx-pref-width: 80px;" />
      <Button text="Cancelar" onAction="#closeOverlay" style="-fx-pref-width: 80px;" />
    </HBox>
  </children>
</VBox>
